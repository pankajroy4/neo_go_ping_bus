<%= render "shared/errors", object: resource %>
<section>
	<div class="container py-4">
		<div class="row justify-content-center">
			<div class="col-xl-8">
				<div class="card shadow" style="border-radius: 1rem;">
					<div class="row g-0 pb-3">
						<div class="col-md-6 col-lg-5 text-center">
							<%= image_tag "usersignup.png", class: "img-fluid", style: "border-radius: 10px; filter: drop-shadow(10px 7px 12px #e65646);" %>
						</div>
						<div class = "col-md-6 col-mg-7 d-flex align-items-center">
							<div class = "card-body p-2 p-mg-5 text-black">
								<%= form_for(resource, as: resource_name, data: {controller: 'field focus-on-error'}, url: registration_path(resource_name)) do |f| %>
									<div class = "d-flex align-items-center">
										<span class = "h1 fw-bold mb-0">
											<%= image_tag "bus_logo3.png", class: "form_img", style: "filter: drop-shadow(2px 5px 4px #e65646);" %> 
										</span>
										<span class = "h2 fw-bold mb-0"> Signup</span>
									</div>
                  <h5 class = "fw-normal mb-1 pb-0" style = "letter-spacing: 1px;">Create an account</h5>
									<div class = "form-outline mb-2">
										<%= f.text_field :name, placeholder: "Enter name", required: "", autofocus: true, class: "form-control form-control-mg" %>
									</div>
									<div class = "form-outline mb-2">
										<%= f.email_field :email, placeholder: "Enter email", required: "", autofocus: true, class: "form-control form-control-mg" %>
									</div>
									<div class="password-container form-outline mb-2">
										<%= f.label :password, class: "mb-1" %><br />
										<div class="password-wrapper" data-controller="toggle-password">
											<%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)", class: "input-field form-control form-control-mg", autocomplete: "new-password", id: "password-field", data: { toggle_password_target: "password" } %>
											<i class="fas fa-eye toggle-password-icon" data-action="click->toggle-password#toggle" data-toggle-password-target="icon"></i>
										</div>
									</div>
									<div class="password-container form-outline mb-2">
										<div class="password-wrapper" data-controller="toggle-password">
											<%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "input-field form-control form-control-mg", autocomplete: "new-password", id: "password-field", data: { toggle_password_target: "password" } %>
											<i class="fas fa-eye toggle-password-icon" data-action="click->toggle-password#toggle" data-toggle-password-target="icon"></i>
										</div>
									</div>
                   <div class="form-group">
                    <%= f.label :select_role, class: "form-label mx-3" %>
										<%= f.select :role, [["User", "user"], ["Bus Owner", "bus_owner"]], { selected: "user", class: "form-control status-select" }, { data: { action: "change->field#update", field_target: "sel" } } %>
                  </div>
									
                  <div class="form-group form-outline mb-1 select" id="registrationNumberField" style="display: none;" data-field-target = "regis">
                     <%= f.text_field :registration_no, placeholder: "Registration no", class: "form-control form-control-mg bus_owner" %> 
                  </div>

									<div class = "pt-1 mb-1">
										<%= f.submit "Sign Up", class: "btn btn-dark btn-outline-secondary btn-mg btn-block" %>
									</div>
                    <%= render "users/shared/links" %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>