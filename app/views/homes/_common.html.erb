<div class = "container py-4">
  <div class = "row">
    <div class = "col-lg-12 mx-auto">
      <ul class = "list-group shadow">
      <%= turbo_frame_tag "searched_bus", style: "border-radius: .5rem;" do %>
        <% @approved_buses.each do |bus| %>
          <li class = "list-group-item">
            <div class = "media align-items-lg-center flex-column flex-lg-row p-2">
              <div class = "row">
                <div class = "col-lg-8 mx-auto mt-3">
                  <div class = "media-body order-2 order-lg-1">
                    <h3 class = "mt-0 font-weight-bold mb-2">
                      <%= link_to bus.name, bus_owner_bus_path(bus.user, bus.id), data: { turbo_frame: "_top" } %> 
                      <%= link_to "Book Ticket", new_bus_reservation_path(bus.id), class: "btn btn-outline-success  m-2", data: { turbo_frame: "_top" } %>
                    </h3>
                    <h3 class = "font-italic text-muted mb-0 pt-3 small">
                      Route: <%= bus.route %>
                    </h3>
                  </div>
                </div>
                <div class = "col-lg-2 mx-auto">
                  <% if bus.main_image.attached? %>
                    <%= image_tag bus.main_image, class: "ml-lg-5 order-1 order-lg-2 img-fluid" %>
                  <% else %>
                    <%= image_tag "bus_logo3.png", class: "ml-lg-5 order-1 order-lg-2 img-fluid", style: "width:180px" %>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
</div>


