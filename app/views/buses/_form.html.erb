
<section>
	<div class = "container py-5">
		<div class = "row d-flex justify-content-center align-items-center">
			<div class = "col col-xl-10">
				<div class = "card shadow" style = "border-radius: 1rem;">
					<div class = "row g-0">
						<div class = "col-md-6 col-lg-5 d-none d-md-block mt-4 pt-4">
							<% if object2.main_image.attached? %>
								<%= image_tag object2.main_image, class: "img-fluid", style: "border-radius:10px" %>
							<% else %>
								<%= image_tag "bus_logo2.png", class: "img-fluid" %>
							<% end %>
						</div>
						<div class = "col-md-6 col-mg-7 d-flex align-items-center">
							<div class = "card-body p-2 p-mg-5 text-black">
								<%= form_with(model: [object1, object2], url: object2.persisted? ? bus_owner_bus_path(object1, object2) : bus_owner_buses_path(object1), data: { controller: "focus-on-error"} ) do |f| %> 

									<div class = "d-flex align-items-center mb-2 pb-1">
										<span class = "h1 fw-bold mb-0">
											<%= image_tag "bus_logo2.png", class: "form_img" %> 
										</span>
										<% unless object2.persisted? %>
											<span class = "h2 fw-bold mb-0">Add Bus</span>
										<% else %>
											<span class = "h2 fw-bold mb-0">Update Bus</span>
										<% end %>
									</div>
									<% unless object2.persisted? %>
										<h5 class = "fw-normal mb-2 pb-2" style = "letter-spacing: 1px;">Enter Bus inforation</h5>
									<% end %>
									<div class = "form-outline mb-3">
										<%= f.text_field :name, placeholder: "Enter bus name", required: "", autofocus: true, class: "form-control form-control-mg" %>
									</div>
									<div class = "form-outline mb-3">
										<%= f.text_field :registration_no, placeholder: "Enter registration no", required: "", autofocus: true, class: "form-control form-control-mg" %>
									</div>
									<div class = "form-outline mb-3">
										<%= f.text_field :route, placeholder: "Route", class: "form-control form-control-mg" %>        
									</div>
									<div class = "form-outline mb-3">
										<%= f.text_field :total_seat, placeholder: "Total no of seats", class: "form-control form-control-mg" %>        
									</div>
									<div class = "form-outline mb-3">
										<%= f.label :main_image, "Upload bus image", class: "mb-1 pb-lg-2" %>
										<%= f.file_field :main_image, placeholder: "Upload image", class: "form-control form-control-mg" %>        
									</div>
									<% unless object2.persisted? %>
										<div class = "pt-1 mb-1">
											<%= f.submit "Add Bus", class: "btn btn-dark btn-mg btn-block" %>
										</div>
									<% else %>
										<div class = "pt-1 mb-1">
											<%= f.submit "Update Bus", class: "btn btn-dark btn-mg btn-block" %>
										</div>
									<% end %> 
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
